<%- include("partials/head.ejs") -%>
<%- include("partials/navbar.ejs", { user: user } ) -%>
<section class="section">
    <div class="container" style="max-width: 500px;">
        <form action="/dashboard/user/importpwd" enctype="multipart/form-data" method="post">
            <div class="box is-bordered">
                <p class="is-size-5">Importuj użytkownika</p>

                <div class="field" style="margin-top: 20px;">
                    <label class="label" for="beginningYear">Rocznik do zaimportowania</label>
                    <div class="control has-icons-left">
                        <input class="input" type="text" name="beginningYear" value="<%= (new Date()).getFullYear() %>">
                        <span class="icon is-small is-left">
                            <i class="fas fa-calendar"></i>
                        </span>
                    </div>
                    <p>Uwaga: Jest to rocznik rozpoczęcia studiów inżynierskich!</p>
                </div>

                <div class="field">
                    <label class="label" for="fieldOfStudy">Kierunek</label>
                    <div class="select">
                        <select name="fieldOfStudy">
                            <option value="AppliedCS">Informatyka Stosowana</option>
                            <option value="TechnicalPH">Fizyka Techniczna</option>
                            <option value="MedicalPH">Fizyka Medyczna</option>
                            <option value="NanoTech">Mikro- i Nanotechnologie w biofizyce</option>
                            <option value="NanoInz">Nanoinżynieria materiałów</option>
                        </select>
                    </div>
                </div>

                <div class="field">
                    <div class="file is-primary">
                        <label class="file-label">
                            <input class="file-input" type="file" name="pwd">
                            <span class="file-cta">
                            <span class="file-icon">
                              <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                              Plik .PWD
                            </span>
                          </span>
                        </label>
                    </div>
                </div>

                <p class="has-text-danger">Operacja importowania może długo potrwać i jest zależna od podania poprawnego pliku .pwd!</p>

                <input type="hidden" name="_csrf" value="<%= csrf %>" />

                <div class="field">
                    <p class="control">
                        <button class="button is-dark is-fullwidth">
                            Importuj!
                        </button>
                    </p>
                </div>
            </div>
        </form>
    </div>
</section>
<%- include("partials/footer.ejs") -%>
